# Copy this file to .env and fill in your values
# Minimum configuration for local development

# Database - REQUIRED
MONGO_URI=mongodb://localhost:27017/babyfiction

# Server - REQUIRED
PORT=4000
NODE_ENV=development

# JWT - REQUIRED
JWT_SECRET=babyfiction-jwt-secret-2024-please-change-in-production-abc123xyz
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=babyfiction-refresh-secret-2024-please-change-in-production-def456uvw
JWT_REFRESH_EXPIRE=30d

# Email (Optional - can configure later)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@babyfiction.com
FROM_NAME=Baby Fiction

RESEND_API_KEY=
EMAIL_FROM_ADDRESS=noreply@babyfiction.com
EMAIL_FROM_NAME=Baby Fiction

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Frontend
FRONTEND_URL=http://localhost:3000

# PayFast (Optional - for payments)
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=
PAYFAST_PASSPHRASE=
PAYFAST_MODE=sandbox
PAYFAST_RETURN_URL=http://localhost:3000/payment/success
PAYFAST_CANCEL_URL=http://localhost:3000/payment/cancel
PAYFAST_NOTIFY_URL=http://localhost:4000/api/payment/notify

# Redis (Optional)
REDIS_URL=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloudinary (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_UPLOAD_FOLDER=babyfiction

# Google reCAPTCHA v3 (Optional)
RECAPTCHA_SECRET_KEY=
RECAPTCHA_MIN_SCORE=0.5
